<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="com.andrehaueisen.listadejanot.E_add_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_politician_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="8"
                android:completionThreshold="1"
                android:dropDownAnchor="@id/select_politician_toolbar"
                android:dropDownSelector="@color/colorAccentLight"
                android:hint="@string/type_politician_name_hint"
                android:theme="@style/Autocomplete"/>

            <ImageButton
                android:id="@+id/delete_text_image_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:minHeight="24dp"
                android:minWidth="24dp"
                android:src="@drawable/ic_close_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/blur_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/explanation_text_view"
            style="@style/BigRobotoBlackTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:text="@string/selector_explanation"
            android:textAlignment="center"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/post_text_view"
                style="@style/BigRobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toRightOf="@+id/politician_image_view"
                app:layout_constraintTop_toTopOf="@+id/politician_image_view"
                tools:text="senador"/>

            <ImageView
                android:id="@+id/politician_image_view"
                android:layout_width="150dp"
                android:layout_height="195dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/name_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toRightOf="@+id/politician_image_view"
                app:layout_constraintTop_toBottomOf="@+id/post_text_view"
                tools:text="Aecio Neves"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:id="@+id/email_text_view"
                style="@style/RobotoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/politician_image_view"
                app:layout_constraintTop_toBottomOf="@+id/name_text_view"
                tools:text="asdasfd@gmail.com"/>

            <View
                android:id="@+id/mold_view"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorPrimaryLight"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintHorizontal_bias="0.333"
                app:layout_constraintLeft_toRightOf="@+id/politician_image_view"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/textView"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/votes_title"
                app:layout_constraintLeft_toRightOf="@+id/badge_image_view"
                app:layout_constraintRight_toLeftOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintTop_toTopOf="@+id/mold_view"/>

            <TextView
                android:id="@+id/votes_number_text_view"
                style="@style/RobotoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/mold_view"
                app:layout_constraintLeft_toLeftOf="@+id/textView"
                app:layout_constraintRight_toRightOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:text="110.110"/>

            <ImageView
                android:id="@+id/badge_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/mold_view"
                app:layout_constraintLeft_toLeftOf="@+id/mold_view"
                app:layout_constraintTop_toTopOf="@+id/mold_view"
                tools:layout_height="48dp"
                tools:layout_width="48dp"/>

            <ToggleButton
                android:id="@+id/add_to_vote_count_toggle_button"
                style="@android:style/Widget.Material.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/white"
                android:textOff="@string/add_vote"
                android:textOn="@string/remove_vote"
                app:layout_constraintBottom_toBottomOf="@+id/mold_view"
                app:layout_constraintRight_toRightOf="@+id/mold_view"
                app:layout_constraintTop_toTopOf="@+id/mold_view"/>

            <TextView
                android:id="@+id/plus_one_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plus_one"
                app:layout_constraintLeft_toLeftOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintRight_toRightOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintTop_toTopOf="@+id/add_to_vote_count_toggle_button"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_to_vote_count_toggle_button"
                android:layout_marginBottom="8dp"/>

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>


</LinearLayout>

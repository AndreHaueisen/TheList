<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.andrehaueisen.listadejanot.E_add_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_politician_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.AppCompatMultiAutoCompleteTextView
            android:id="@+id/auto_complete_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:theme="@style/Autocomplete"
            android:dropDownAnchor="@id/select_politician_toolbar"
            android:dropDownSelector="@color/colorAccentLight"
            android:hint="@string/type_politician_name_hint"
            />

    </android.support.v7.widget.Toolbar>

</LinearLayout>

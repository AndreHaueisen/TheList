<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/shape_white_to_secondary"
    android:fitsSystemWindows="true"
    tools:context="com.andrehaueisen.listadejanot.e_search_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/search_politician_image_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="?android:attr/actionBarSize"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTransparent"
                app:layout_collapseMode="pin">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_text_view"
                    style="@style/Autocomplete"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@null"
                    android:hint="@string/type_politician_name_hint"
                    android:imeOptions="flagNoEnterAction|actionNone"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/delete_text_image_button"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageButton
                    android:id="@+id/delete_text_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@null"
                    android:contentDescription="@string/description_erase_search_text"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vote_list_image_button"/>

                <ImageButton
                    android:id="@+id/vote_list_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@null"
                    android:contentDescription="@string/vote_list"
                    android:paddingEnd="16dp"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/ic_view_list_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/orientation_text_view"
                style="@style/RobotoMediumTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/ic_arrow_upward_24dp"
                android:text="@string/type_name_orientation"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone"/>

            <android.support.constraint.Group
                android:id="@+id/politician_info_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:constraint_referenced_ids="post_text_view, name_text_view, group_grades, politician_image_view, badge_image_view, share_button, search_on_web_button, email_button, opinions_button, missing_votes_text_view, vote_title_text_view, votes_number_text_view, vote_radio_group, group_rating_bars"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/post_text_view"
                style="@style/LatoBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="SENADOR"/>

            <TextView
                android:id="@+id/name_text_view"
                style="@style/LatoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:transitionName="@string/transition_name"
                app:layout_constraintEnd_toEndOf="@+id/post_text_view"
                app:layout_constraintStart_toStartOf="@+id/post_text_view"
                app:layout_constraintTop_toBottomOf="@+id/post_text_view"
                tools:text="Aecio Neves"/>

            <include
                android:id="@+id/group_grades"
                layout="@layout/group_layout_grades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_text_view"/>

            <ImageView
                android:id="@+id/politician_image_view"
                android:layout_width="150dp"
                android:layout_height="195dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_grades"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/badge_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/transition_badge_background"
                android:elevation="2dp"
                android:padding="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="108dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/button_neutral"
                android:contentDescription="@string/share"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_share_24dp"
                app:layout_constraintBottom_toTopOf="@+id/search_on_web_button"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                app:layout_constraintTop_toTopOf="@+id/politician_image_view"/>

            <ImageButton
                android:id="@+id/search_on_web_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="0dp"
                android:backgroundTint="@color/button_neutral"
                android:contentDescription="@string/search_on_web"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_open_in_new_24dp"
                app:layout_constraintBottom_toTopOf="@+id/email_button"
                app:layout_constraintStart_toStartOf="@+id/share_button"/>

            <ImageButton
                android:id="@+id/email_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/button_neutral"
                android:contentDescription="@string/description_email_politician"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_email_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintStart_toStartOf="@+id/search_on_web_button"/>

            <ImageButton
                android:id="@+id/opinions_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="108dp"
                android:backgroundTint="@color/button_neutral"
                android:contentDescription="@string/description_opinions_on_politician"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_opinions_24dp"
                app:layout_constraintEnd_toEndOf="@+id/politician_image_view"
                app:layout_constraintTop_toTopOf="@+id/share_button"/>

            <TextView
                android:id="@+id/missing_votes_text_view"
                style="@style/LatoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vote_title_text_view"
                tools:text="499 votes to be condemned"/>

            <TextView
                android:id="@+id/vote_title_text_view"
                style="@style/LatoBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:text="@string/votes_title"
                android:textSize="22sp"
                app:layout_constraintEnd_toStartOf="@+id/votes_number_text_view"
                app:layout_constraintTop_toBottomOf="@+id/politician_image_view"
                />

            <TextView
                android:id="@+id/votes_number_text_view"
                style="@style/LatoBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/vote_title_text_view"
                app:layout_constraintEnd_toEndOf="@+id/politician_image_view"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="@+id/politician_image_view"
                app:layout_constraintTop_toTopOf="@+id/vote_title_text_view"
                tools:text="110.110"/>

            <include
                android:id="@+id/group_rating_bars"
                layout="@layout/group_layout_rating_bars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/missing_votes_text_view"/>

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:id="@+id/vote_radio_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:rrbg_animateSelector="accelerateDecelerate"
                app:rrbg_animateTexts_enter="accelerateDecelerate"
                app:rrbg_backgroundColor="@android:color/transparent"
                app:rrbg_selectorBringToFront="true"
                app:rrbg_selectorColor="@color/colorDarkTransparent"
                app:rrbg_selectorSize="3dp">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_backgroundColor="@color/colorAccentLight"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/colorAccentDark"
                    app:rrb_text="@string/vote_condemn"
                    app:rrb_textColor="@color/colorAccentSmooth"
                    app:rrb_textColorTo="@android:color/white"
                    app:rrb_textSize="15sp"/>

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_backgroundColor="@color/colorPrimaryLight"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/colorPrimary"
                    app:rrb_text="@string/vote_absolve"
                    app:rrb_textColor="@color/colorPrimarySmooth"
                    app:rrb_textColorTo="@android:color/white"
                    app:rrb_textSize="15sp"/>
            </co.ceryle.radiorealbutton.RadioRealButtonGroup>

            <TextView
                android:id="@+id/plus_one_text_view"
                style="@style/LatoBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:text="@string/plus_one"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@+id/votes_number_text_view"
                app:layout_constraintLeft_toLeftOf="@+id/votes_number_text_view"
                app:layout_constraintRight_toRightOf="@+id/votes_number_text_view"
                app:layout_constraintTop_toTopOf="@+id/votes_number_text_view"/>


        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/mold_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/politician_image_view"
                android:layout_width="150dp"
                android:layout_height="195dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#fff"
                android:elevation="3dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/name_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                app:layout_constraintRight_toRightOf="@+id/politician_image_view"
                app:layout_constraintTop_toBottomOf="@+id/politician_image_view"
                tools:text="Aecio Neves"/>

            <TextView
                android:id="@+id/email_text_view"
                style="@style/RobotoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                app:layout_constraintRight_toRightOf="@+id/politician_image_view"
                app:layout_constraintTop_toBottomOf="@+id/name_text_view"
                tools:text="asdasfd@gmail.com"/>

            <ImageButton
                android:id="@+id/search_on_web_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:backgroundTint="@color/colorPrimaryLightTransparent"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_search_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"/>

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/textView"
            style="@style/RobotoBlackTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/votes_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mold_view"/>

        <TextView
            android:id="@+id/votes_number_text_view"
            style="@style/RobotoRegularTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintLeft_toLeftOf="@+id/textView"
            app:layout_constraintRight_toRightOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="110.110"/>

        <ImageView
            android:id="@+id/badge_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mold_view"
            tools:ignore="ContentDescription"
            tools:layout_height="48dp"
            tools:layout_width="48dp"/>

        <ToggleButton
            android:id="@+id/add_to_vote_count_toggle_button"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/white"
            android:textOff="@string/vote_condemn"
            android:textOn="@string/vote_absolve"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/plus_one_text_view"
            style="@style/RobotoBlackTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/plus_one"
            app:layout_constraintBottom_toBottomOf="@+id/add_to_vote_count_toggle_button"
            app:layout_constraintLeft_toLeftOf="@+id/add_to_vote_count_toggle_button"
            app:layout_constraintRight_toRightOf="@+id/add_to_vote_count_toggle_button"
            app:layout_constraintTop_toTopOf="@+id/add_to_vote_count_toggle_button"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/face_thumbnail_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/name_text_view"
        style="@style/RobotoRegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/face_thumbnail_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Aecio Neves"/>

    <TextView
        android:id="@+id/vote_date_text_view"
        style="@style/RobotoRegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/face_thumbnail_image_view"
        app:layout_constraintTop_toBottomOf="@+id/total_votes_text_view"
        tools:text="10, Janeiro, 2017"/>

    <TextView
        android:id="@+id/textView2"
        style="@style/RobotoRegularTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/small_caps_vote_title"
        app:layout_constraintBottom_toBottomOf="@+id/total_votes_text_view"
        app:layout_constraintLeft_toRightOf="@+id/total_votes_text_view"/>

    <TextView
        android:id="@+id/total_votes_text_view"
        style="@style/RobotoRegularTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toRightOf="@+id/face_thumbnail_image_view"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view"
        tools:text="142.40"/>

    <TextView
        android:id="@+id/missing_votes_text_view"
        style="@style/RobotoItalicBlackTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/missing_votes_to_condemnation"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/user_vote_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:title="@string/your_votes"
        app:theme="@style/ToolbarStyle"
        app:titleTextColor="@android:color/white">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/empty_vote_list_text_view"
        style="@style/BigRobotoBlackTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/no_one_banned_yet"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/votes_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
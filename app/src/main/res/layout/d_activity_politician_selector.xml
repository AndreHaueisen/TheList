<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/politician_search_coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.andrehaueisen.listadejanot.d_search_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/search_politician_image_view"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="?android:attr/actionBarSize"
                android:visibility="gone"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlways"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTransparent"
                app:layout_collapseMode="pin">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_text_view"
                    style="@style/Autocomplete"
                    android:layout_width="0dp"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@null"
                    android:hint="@string/type_politician_name_hint"
                    android:imeOptions="flagNoEnterAction|actionNone"
                    android:inputType="textPersonName"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/delete_text_image_button"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageButton
                    android:id="@+id/delete_text_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@null"
                    android:contentDescription="@string/description_erase_search_text"
                    android:padding="8dp"
                    android:src="@drawable/ic_close_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Group
                android:id="@+id/initial_screen_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:constraint_referenced_ids="orientation_text_view, national_congress_image_view, cloud_one_image_view, cloud_two_image_view "
                tools:visibility="visible"/>

            <TextView
                android:id="@+id/orientation_text_view"
                style="@style/RobotoMediumTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:drawableStart="@drawable/ic_arrow_upward_24dp"
                android:text="@string/type_name_orientation"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/national_congress_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_congresso_nacional"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orientation_text_view"/>

            <ImageView
                android:id="@+id/cloud_one_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_cloud_1"
                app:layout_constraintBottom_toTopOf="@+id/national_congress_image_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cloud_two_image_view"
                app:layout_constraintTop_toBottomOf="@+id/orientation_text_view"
                app:layout_constraintVertical_bias="0.19999999"/>

            <ImageView
                android:id="@+id/cloud_two_image_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_cloud_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cloud_one_image_view"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cloud_one_image_view"
                app:layout_constraintVertical_bias="0.3"/>

            <android.support.constraint.Group
                android:id="@+id/politician_info_group"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:constraint_referenced_ids="post_text_view, name_text_view, group_grades, group_buttons, vote_radio_group, group_rating_bars"
                tools:visibility="invisible"/>

            <include
                android:id="@+id/group_buttons"
                layout="@layout/group_layout_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/post_text_view"
                style="@style/LatoBoldTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:textSize="28sp"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/group_buttons"
                tools:text="SENADOR"/>

            <TextView
                android:id="@+id/name_text_view"
                style="@style/LatoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:transitionName="@string/transition_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/post_text_view"
                tools:text="Aecio Neves"/>

            <co.ceryle.radiorealbutton.RadioRealButtonGroup
                android:id="@+id/vote_radio_group"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/post_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/post_text_view"
                app:rrbg_animateDrawables_enter="bounce"
                app:rrbg_animateDrawables_exit="bounce"
                app:rrbg_animateDrawables_scale="1.4"
                app:rrbg_animateSelector="overshoot"
                app:rrbg_bottomLineRadius="2dp"
                app:rrbg_dividerSize="1dp"
                app:rrbg_enableDeselection="true"
                app:rrbg_radius="4dp"
                app:rrbg_selectorBringToFront="true"
                app:rrbg_selectorColor="@color/colorDarkTransparent"
                app:rrbg_selectorSize="4dp">

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_backgroundColor="@color/colorAccentLight"
                    app:rrb_drawable="@drawable/ic_thief"
                    app:rrb_drawableTint="@color/colorAccentSmooth"
                    app:rrb_drawableTintTo="@color/colorSecondaryWhite"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/colorAccentDark"/>

                <co.ceryle.radiorealbutton.RadioRealButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:rrb_backgroundColor="@color/colorPrimaryLight"
                    app:rrb_drawable="@drawable/ic_politician"
                    app:rrb_drawableTint="@color/colorPrimarySmooth"
                    app:rrb_drawableTintTo="@color/colorSecondaryWhite"
                    app:rrb_ripple="true"
                    app:rrb_rippleColor="@color/colorPrimary"/>
            </co.ceryle.radiorealbutton.RadioRealButtonGroup>

            <include
                android:id="@+id/group_grades"
                layout="@layout/group_layout_grades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toTopOf="@id/group_rating_bars"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_text_view"
                app:layout_constraintVertical_bias="0.5"/>

            <include
                android:id="@+id/group_rating_bars"
                layout="@layout/group_layout_rating_bars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <com.dekoservidoni.omfm.OneMoreFabMenu
        android:id="@+id/menu_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:color_main_button="@color/colorAccent"
        app:color_secondary_buttons="@color/colorAccentDark"
        app:content_options="@menu/menu_d_politician_search"
        app:expanded_background_color="@color/colorDarkTransparent"/>

</android.support.design.widget.CoordinatorLayout>

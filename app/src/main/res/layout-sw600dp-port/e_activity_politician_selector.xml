<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="com.andrehaueisen.listadejanot.e_search_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_politician_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_weight="8"
                android:completionThreshold="1"
                android:dropDownAnchor="@id/select_politician_toolbar"
                android:dropDownSelector="@color/colorAccentLight"
                android:hint="@string/type_politician_name_hint"
                android:theme="@style/Autocomplete"/>

            <ImageButton
                android:id="@+id/delete_text_image_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/description_erase_search_text"
                android:minHeight="24dp"
                android:minWidth="24dp"
                android:src="@drawable/ic_close_28dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="128dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="128dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="2dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/politician_image_view"
                android:layout_width="180dp"
                android:layout_height="234dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:id="@+id/badge_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintRight_toRightOf="@+id/politician_image_view"
                tools:ignore="ContentDescription"
                tools:layout_height="48dp"
                tools:layout_width="48dp"/>

            <TextView
                android:id="@+id/post_text_view"
                style="@style/BigRobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="32sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/politician_image_view"
                tools:text="SENADOR"/>

            <TextView
                android:id="@+id/name_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@+id/post_text_view"
                app:layout_constraintRight_toRightOf="@+id/post_text_view"
                app:layout_constraintTop_toBottomOf="@+id/post_text_view"
                tools:text="Aecio Neves"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/email_text_view"
                style="@style/RobotoRegularTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@+id/name_text_view"
                app:layout_constraintRight_toRightOf="@+id/name_text_view"
                app:layout_constraintTop_toBottomOf="@+id/name_text_view"
                tools:text="asdasfd@gmail.com"/>

            <ImageButton
                android:id="@+id/search_on_web_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="140dp"
                android:backgroundTint="@color/colorPrimaryLightTransparent"
                android:contentDescription="@string/search_on_web"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_search_24dp"
                app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                android:layout_marginLeft="140dp"/>

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="140dp"
                android:backgroundTint="@color/colorPrimaryLightTransparent"
                android:contentDescription="@string/share"
                android:elevation="1dp"
                android:padding="16dp"
                android:src="@drawable/ic_share_24dp"
                app:layout_constraintBottom_toTopOf="@+id/search_on_web_button"
                app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"/>

            <View
                android:id="@+id/mold_view"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@color/colorPrimaryLight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <TextView
                android:id="@+id/missing_votes_text_view"
                style="@style/RobotoItalicBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="21sp"
                app:layout_constraintBottom_toTopOf="@+id/mold_view"
                app:layout_constraintHorizontal_bias="0.503"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="499 votes to be condemned"/>

            <TextView
                android:id="@+id/vote_title_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/votes_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mold_view"/>

            <TextView
                android:id="@+id/votes_number_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/mold_view"
                app:layout_constraintLeft_toRightOf="@+id/vote_title_text_view"
                app:layout_constraintTop_toTopOf="@+id/mold_view"
                app:layout_constraintVertical_bias="0.523"
                tools:text="110.110"/>

            <ToggleButton
                android:id="@+id/add_to_vote_count_toggle_button"
                style="@style/ToggleButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textOff="@string/vote_condemn"
                android:textOn="@string/vote_absolve"
                app:layout_constraintBottom_toBottomOf="@+id/mold_view"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/mold_view"/>

            <TextView
                android:id="@+id/plus_one_text_view"
                style="@style/RobotoBlackTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/plus_one"
                app:layout_constraintBottom_toBottomOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintLeft_toLeftOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintRight_toRightOf="@+id/add_to_vote_count_toggle_button"
                app:layout_constraintTop_toTopOf="@+id/add_to_vote_count_toggle_button"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="com.andrehaueisen.listadejanot.e_search_politician.mvp.PoliticianSelectorPresenterActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/select_politician_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="168dp"
        android:layout_marginEnd="104dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="168dp"
        android:padding="16dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@null"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:background="@drawable/transition_background"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/post_text_view"
                    style="@style/BigRobotoBlackTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="SENADOR"/>

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/RobotoBlackTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/post_text_view"
                    tools:text="Aecio Neves"/>

                <TextView
                    android:id="@+id/email_text_view"
                    style="@style/RobotoRegularTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="@+id/name_text_view"
                    app:layout_constraintTop_toBottomOf="@+id/name_text_view"
                    tools:text="asdasfd@gmail.com"/>

                <ImageView
                    android:id="@+id/politician_image_view"
                    android:layout_width="216dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@+id/mold_view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email_text_view"
                    tools:ignore="ContentDescription"/>

                <ImageView
                    android:id="@+id/badge_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/transition_badge_background"
                    android:elevation="2dp"
                    android:padding="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                    app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"
                    tools:ignore="ContentDescription"/>

                <ImageButton
                    android:id="@+id/share_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:backgroundTint="@color/colorAccent"
                    android:contentDescription="@string/share"
                    android:elevation="1dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_share_24dp"
                    app:layout_constraintBottom_toTopOf="@+id/search_on_web_button"
                    app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"/>

                <ImageButton
                    android:id="@+id/search_on_web_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/search_on_web"
                    android:elevation="1dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_search_24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/politician_image_view"
                    app:layout_constraintLeft_toLeftOf="@+id/politician_image_view"/>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/mold_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundTransparent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <TextView
                        android:id="@+id/missing_votes_text_view"
                        style="@style/RobotoRegularTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vote_title_text_view"
                        tools:text="499 votes to be condemned"/>

                    <TextView
                        android:id="@+id/vote_title_text_view"
                        style="@style/RobotoRegularTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/votes_title"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/votes_number_text_view"
                        style="@style/RobotoRegularTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/vote_title_text_view"
                        app:layout_constraintLeft_toRightOf="@+id/vote_title_text_view"
                        app:layout_constraintTop_toTopOf="@+id/vote_title_text_view"
                        tools:text="110.110"/>

                    <ToggleButton
                        android:id="@+id/add_to_vote_count_toggle_button"
                        style="@style/ToggleButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="16dp"
                        android:padding="16dp"
                        android:textColor="@color/colorAccent"
                        android:textOff="@string/vote_condemn"
                        android:textOn="@string/vote_absolve"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:id="@+id/plus_one_text_view"
                        style="@style/RobotoBlackTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:text="@string/plus_one"
                        app:layout_constraintBottom_toBottomOf="@+id/votes_number_text_view"
                        app:layout_constraintLeft_toLeftOf="@+id/votes_number_text_view"
                        app:layout_constraintTop_toTopOf="@+id/votes_number_text_view"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/search_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_text_view"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:background="@null"
                    android:completionThreshold="1"
                    android:dropDownSelector="@color/colorAccentLight"
                    android:hint="@string/type_politician_name_hint"
                    android:padding="16dp"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white"
                    android:theme="@style/Autocomplete"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/delete_text_image_button"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/delete_text_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@null"
                    android:contentDescription="@string/description_erase_search_text"
                    android:minWidth="24dp"
                    android:padding="16dp"
                    android:src="@drawable/ic_close_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

<resources>

    <!-- Base application theme. -->


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item> -->
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
    </style>

    <style name="ToggleButtonStyle" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textAppearance">@style/RobotoBlackTextStyle</item>

    </style>

    <style name="RobotoRegularToolbarTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="RobotoBlackTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="BigRobotoBlackTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="RobotoItalicBlackTextStyle" parent="RobotoBlackTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>

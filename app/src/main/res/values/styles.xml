<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkBackground" parent="AppTheme">
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Autocomplete" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
    </style>

    <style name="ToggleButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:textAppearance">@style/RobotoRegularTextStyle</item>
    </style>

    <style name="RobotoThinItalicTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_thin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoRegularToolbarTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="RobotoBlackTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="BigRobotoBlackTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="RobotoItalicBlackTextStyle" parent="RobotoBlackTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LogInTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/shape_login_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:navigationBarColor">@color/colorPrimary</item>-->
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.Material.RatingBar">
        <item name="android:progressTint">@color/colorPrimaryDark</item>
        <item name="android:progressBackgroundTint">@color/colorPrimary</item>
        <item name="android:secondaryProgressTint">@color/colorPrimary</item>
    </style>

    <style name="Autocomplete" parent="@android:style/Widget.Material.AutoCompleteTextView">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:dropDownSelector">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:completionThreshold">2</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>
    </style>

    <style name="RobotoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorTextAndIcons</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="RobotoThinItalicTextStyle" parent="RobotoRegularTextStyle">
        <item name="android:fontFamily">@string/font_roboto_thin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoMediumTextStyle" parent="RobotoRegularTextStyle">
        <item name="fontFamily">@string/font_roboto_medium</item>
    </style>

    <style name="RobotoBlackTextStyle" parent="RobotoRegularTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="RobotoThinTextStyle" parent="RobotoRegularTextStyle">
        <item name="android:fontFamily">@string/font_roboto_thin</item>
    </style>

    <style name="LatoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="LatoBoldTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="LatoThinTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_thin</item>
    </style>

    <style name="LatoLightTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="LogInTheme" parent="FirebaseUI">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>

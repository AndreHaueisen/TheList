<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
        <!--<item name="android:navigationBarColor">@color/colorPrimary</item>-->
    </style>

    <style name="DarkBackground" parent="AppTheme">
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Autocomplete" parent="@android:style/Widget.Material.AutoCompleteTextView">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:dropDownSelector">@color/colorAccentDark</item>
        <item name="android:textColorHint">@color/colorSecondarySmooth</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:completionThreshold">2</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Material.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="ButtonColoredStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonBorderlessStyle" parent="@android:style/Widget.Material.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="ButtonBorderlessRobotoStyle" parent="ButtonBorderlessStyle">
        <item name="android:fontFamily">@string/font_roboto_thin</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoThinItalicTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_thin</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RobotoRegularToolbarTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="RobotoMediumTextStyle" parent="RobotoRegularTextStyle">
        <item name="fontFamily">@string/font_roboto_medium</item>
    </style>

    <style name="RobotoBlackTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="BigRobotoBlackTextStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@string/font_roboto_black</item>
    </style>

    <style name="RobotoItalicBlackTextStyle" parent="RobotoBlackTextStyle">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RobotoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@string/font_roboto_regular</item>
    </style>

    <style name="LatoRegularTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="LatoBoldTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="LatoThinTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_thin</item>
    </style>

    <style name="LatoItalicTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_italic</item>
    </style>

    <style name="LatoLightTextStyle" parent="LatoRegularTextStyle">
        <item name="android:fontFamily">@font/lato_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LogInTheme" parent="FirebaseUI">
        <item name="android:windowBackground">@drawable/shape_login_background</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>
